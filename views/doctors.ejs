<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Doktor Yönetimi (CRUD)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5">

    <h1 class="mb-4">Doktor Yönetim Paneli (CRUD)</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">Yeni Doktor Ekle</div>
        <div class="card-body">
            <form action="/doctors/add" method="POST" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="name" class="form-control" placeholder="Ad" required>
                </div>
                <div class="col-md-3">
                    <input type="text" name="surname" class="form-control" placeholder="Soyad" required>
                </div>
                <div class="col-md-2">
                    <select name="gender_id" class="form-select" required>
                        <option value="">Cinsiyet Seç</option>
                        <% genders.forEach(g => { %>
                            <option value="<%= g.id %>"><%= g.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="department_id" class="form-select" required>
                        <option value="">Departman Seç</option>
                        <% departments.forEach(dept => { %>
                            <option value="<%= dept.id %>"><%= dept.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-success w-100">Ekle</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">Mevcut Doktorlar</div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Departman</th>
                        <th>Cinsiyet</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    <% doctors.forEach(doc => { %>
                    <tr>
                        <td><%= doc.id %></td>
                        <td><%= doc.name %> <%= doc.surname %></td>
                        <td><%= doc.department_name %></td>
                        <td><%= doc.gender_name %></td>
                        <td>
                            <a href="/doctors/delete/<%= doc.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Bu doktoru silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
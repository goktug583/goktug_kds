<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include('./_partials/_head'); %>
        <%- include('./_partials/_cdn_fontawesome'); %>
        
        <title>Doktor Yönetimi</title>

        <style>
            
            .card-header-border-bottom {
                border-bottom: 1px solid #e5e9f2;
                padding-bottom: 15px;
                margin-bottom: 15px;
            }
        </style>
    </head>

    <body class="navbar-fixed sidebar-fixed" id="body">
        
        <div class="wrapper">
            
            <%- include('./_partials/_sidebar') %>

            <div class="page-wrapper">
                
                <%- include('./_partials/_header') %>

                <div class="content-wrapper">
                    <div class="content">
                        
                        <div class="row">
                            <div class="col-12">
                                
                                <div class="card card-default">
                                    <div class="card-header card-header-border-bottom">
                                        <h2 style="font-size: 20px; font-weight: bold;">Yeni Doktor Ekle</h2>
                                    </div>
                                    <div class="card-body">
                                        <form action="/doctors/add" method="POST">
                                            <div class="form-row">
                                                <div class="col-md-3 mb-3">
                                                    <label>Ad</label>
                                                    <input type="text" name="name" class="form-control" placeholder="Ad giriniz" required>
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                    <label>Soyad</label>
                                                    <input type="text" name="surname" class="form-control" placeholder="Soyad giriniz" required>
                                                </div>
                                                <div class="col-md-2 mb-3">
                                                    <label>Cinsiyet</label>
                                                    <select name="gender_id" class="form-control" required>
                                                        <option value="">Seçiniz</option>
                                                        <% if(typeof genders !== 'undefined') { %>
                                                            <% genders.forEach(g => { %>
                                                                <option value="<%= g.id %>"><%= g.name %></option>
                                                            <% }) %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                    <label>Departman</label>
                                                    <select name="department_id" class="form-control" required>
                                                        <option value="">Seçiniz</option>
                                                        <% if(typeof departments !== 'undefined') { %>
                                                            <% departments.forEach(d => { %>
                                                                <option value="<%= d.id %>"><%= d.name %></option>
                                                            <% }) %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="col-md-1 mb-3 d-flex align-items-end">
                                                    <button type="submit" class="btn btn-success btn-block">Ekle</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="card card-default mt-4">
                                    <div class="card-header card-header-border-bottom">
                                        <h2 style="font-size: 20px; font-weight: bold;">Mevcut Doktorlar</h2>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-hover table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Ad Soyad</th>
                                                    <th>Departman</th>
                                                    <th>Cinsiyet</th>
                                                    <th class="text-right">İşlem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% doctors.forEach(doc => { %>
                                                    <tr>
                                                        <td><%= doc.id %></td>
                                                        <td><%= doc.name %> <%= doc.surname %></td>
                                                        <td>
                                                            <% if(doc.department_name) { %>
                                                                <span class="badge badge-primary"><%= doc.department_name %></span>
                                                            <% } else { %>
                                                                <span class="text-muted">-</span>
                                                            <% } %>
                                                        </td>
                                                        <td><%= doc.gender_name || '-' %></td>
                                                        <td class="text-right">
                                                            <a href="/doctors/edit/<%= doc.id %>" class="btn btn-warning btn-sm">
                                                                <i class="fa-solid fa-pen"></i> Düzenle
                                                            </a>
                                                            <a href="/doctors/delete/<%= doc.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">
                                                                <i class="fa-solid fa-trash"></i> Sil
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>

                        </div>
                </div>
                
                <%- include('./_partials/_footer') %>
            
            </div>
        </div>
        
        <%- include('./_partials/_scripts') %>
    </body>
</html>
<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <base href="/"> 
        
        <%- include('./_partials/_head'); %>
        <%- include('./_partials/_cdn_fontawesome'); %>
        
        <title><%= title %></title>

        <style>
            .card-header-border-bottom {
                border-bottom: 1px solid #e5e9f2;
                padding-bottom: 15px;
                margin-bottom: 15px;
            }
        </style>
    </head>

    <body class="navbar-fixed sidebar-fixed" id="body">
        <div class="wrapper">
            
            <%- include('./_partials/_sidebar') %>

            <div class="page-wrapper">
                
                <%- include('./_partials/_header') %>

                <div class="content-wrapper">
                    <div class="content">
                        
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                
                                <div class="card card-default">
                                    <div class="card-header card-header-border-bottom d-flex justify-content-between align-items-center">
                                        <h2 style="font-size: 20px; font-weight: bold; color: #333;">Doktor Bilgilerini Düzenle</h2>
                                        
                                        <a href="/doctors" class="btn btn-secondary btn-sm">
                                            <i class="fa-solid fa-arrow-left"></i> İptal / Geri Dön
                                        </a>
                                    </div>

                                    <div class="card-body">
                                        <form action="/doctors/update" method="POST">
                                            
                                            <input type="hidden" name="id" value="<%= doctor.id %>">

                                            <div class="form-row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="text-dark font-weight-medium">Ad</label>
                                                    <input type="text" name="name" class="form-control" value="<%= doctor.name %>" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="text-dark font-weight-medium">Soyad</label>
                                                    <input type="text" name="surname" class="form-control" value="<%= doctor.surname %>" required>
                                                </div>
                                            </div>

                                            <div class="form-row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="text-dark font-weight-medium">Cinsiyet</label>
                                                    <select name="gender_id" class="form-control" required>
                                                        <% genders.forEach(g => { %>
                                                            <option value="<%= g.id %>" <%= doctor.gender_id === g.id ? 'selected' : '' %>>
                                                                <%= g.name %>
                                                            </option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="text-dark font-weight-medium">Departman</label>
                                                    <select name="department_id" class="form-control" required>
                                                        <% departments.forEach(d => { %>
                                                            <option value="<%= d.id %>" <%= doctor.department_id === d.id ? 'selected' : '' %>>
                                                                <%= d.name %>
                                                            </option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-footer pt-4 mt-4 border-top text-right">
                                                <button type="submit" class="btn btn-warning text-dark font-weight-bold px-4">
                                                    <i class="fa-solid fa-check"></i> Güncelle
                                                </button>
                                            </div>

                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                
                <%- include('./_partials/_footer') %>
            
            </div>
        </div>
        
        <%- include('./_partials/_scripts') %>
    </body>
</html>